<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_race_tree" model="ir.ui.view">
            <field name="name">res.race.tree</field>
            <field name="model">res.race</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_res_race" model="ir.actions.act_window">
            <field name="name">民族</field>
            <field name="res_model">res.race</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem action="action_res_race" id="menu_action_res_race" parent="base.menu_administration"/>

    </data>
</odoo>